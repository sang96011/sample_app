<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t("home.h3") %></h3>
        <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t("home.h0") %></h1>
    <h2>
      <%= t("home.c1") %>
      <%= link_to t("rails_name"), t("rails_url") %>
      <%= t("home.c2") %>
    </h2>
    <%= link_to t("signup.h1"), signup_path , class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails logo" ), t("about.c7") %>
<% end %>
